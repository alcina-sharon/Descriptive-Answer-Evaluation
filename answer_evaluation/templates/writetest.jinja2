        <a class="navbar-brand" >Student</a>

      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href = "/taketest">Take Test</a></li>
         <li><a href = "/veiwresult">View Results</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <li><a><span class="glyphicon glyphicon-user"></span>{{session['username']}}</a></li>
        <li><a href="/first"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>

      </ul>
    </div>
  </nav>
<div class="jumbotron text-center">
<h1>{{tablenew[0][0]}}</h1>
</div>


{% for i in range(0,count) %}

<div class="container">

    <div class="row">
      <div class="col-25">
        <label>{{tablenew[1][i]}}</label>
      </div>
      <div class="col-75">
        <label>{{tablenew[2][i]}}</label>
      <!--  <textarea name="Question{{i+1}}" value="{{tablenew[2][i]}}" placeholder="{{tablenew[2][i]}}" style="height:200px"></textarea>-->
      </div>
    </div>

    <div class="row">
      <div class="col-25">
